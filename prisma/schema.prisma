generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                      Int                @id @default(autoincrement())
  email                   String             @unique
  password                String
  faultyFacilitiesReports FaultyFacilities[] @relation(name: "FaultyFacilitiesToUser")
  behaviorsReports        Behaviors[]        @relation(name: "BehaviorsToUser")
  emergencyReports        Emergencies[]      @relation(name: "EmergenciesToUser")
}

model FaultyFacilities {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now()) @db.Date
  type     String
  media    String?
  location String
  user     User?    @relation(name: "FaultyFacilitiesToUser", fields: [userId], references: [id])
  userId   Int?
}

model Emergencies {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now()) @db.Date
  type     String
  media    String?
  location String
  userId   Int?
  user     User?    @relation(name: "EmergenciesToUser", fields: [userId], references: [id])
}

model Behaviors {
  id        Int      @id @default(autoincrement())
  location  String
  date      DateTime @default(now()) @db.Date
  evidence  String?
  violation Int
  userId    Int?
  user      User?    @relation(name: "BehaviorsToUser", fields: [userId], references: [id])
}

model Administrator {
  id       Int     @id @default(autoincrement())
  email    String
  password String
  actions  String?
}
