generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                      String             @id @default(cuid())
  type                    String
  status                  String
  createdAt               DateTime           @default(now()) @db.Date
  email                   String             @unique
  password                String
  faultyFacilitiesReports FaultyFacilities[] @relation(name: "FaultyFacilitiesToUser")
  behaviorsReports        Behaviors[]        @relation(name: "BehaviorsToUser")
  emergencyReports        Emergencies[]      @relation(name: "EmergenciesToUser")
}

model FaultyFacilities {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @db.Date
  type      String
  media     String?
  location  String
  user      User?    @relation(name: "FaultyFacilitiesToUser", fields: [userId], references: [id])
  userId    String?
  status    String
}

model Emergencies {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @db.Date
  type      String
  details   String
  userId    String?
  user      User?    @relation(name: "EmergenciesToUser", fields: [userId], references: [id])
  status    String
}

model Behaviors {
  id               String   @id @default(cuid())
  location         String
  createdAt        DateTime @default(now()) @db.Date
  evidence         String?
  violation        Int
  userId           String?
  user             User?    @relation(name: "BehaviorsToUser", fields: [userId], references: [id])
  status           String
  violationDate    DateTime
  violationDetails String
}

model Administrator {
  id       String @id @default(cuid())
  email    String
  password String
}

model AuditLog {
  id            Int      @id @default(autoincrement())
  timestamp     DateTime @default(now())
  eventType     String
  userId        String
  ipAddress     String
  objectType    String
  objectId      String
  previousState Json? // Optional: to store the previous state as JSON
  newState      Json? // Optional: to store the new state as JSON
  status        String
  description   String?
  source        String?
}
